<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GalleryActivity">

    <LinearLayout
        android:layout_width="422dp"
        android:layout_height="608dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#7EC3E8"
            android:text="Xivaga xush kelibsiz !"
            android:textColor="#0E0E0E"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageMain"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            tools:srcCompat="@tools:sample/avatars" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="94dp">

            <LinearLayout

                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_width="@dimen/book_border">

                <ImageView
                    android:id="@+id/img_khiwa1"
                    android:layout_width="104dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:clickable="false"
                    app:srcCompat="@drawable/ichonqala" />

                <ImageView
                    android:id="@+id/img_khiwa2"
                    android:layout_width="98dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:srcCompat="@drawable/kaltaminor" />

                <ImageView
                    android:id="@+id/img_khiwa3"
                    android:layout_width="99dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:srcCompat="@drawable/minor_k" />

                <ImageView
                    android:id="@+id/img_khiwa4"
                    android:layout_width="123dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:srcCompat="@drawable/mamirxonmadrasa" />

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="344dp"
            android:layout_height="362dp"
            android:layout_margin="15dp"
            android:inputType="textMultiLine|text"
            android:text="Rasmdagi tarixiy obidalar xaqida ma`lumot olishni istasangiz , o`zingiz xoxlagan rasm ustiga bosing."
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="italic" />


    </LinearLayout>

</LinearLayout>